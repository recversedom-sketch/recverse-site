---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((p) => ({ params: { slug: p.slug }, props: { post: p } }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={`${post.data.title} - RecVerse`} description={post.data.description}>
  <section class="mx-auto max-w-3xl px-4 py-16">
    <a class="text-sm text-zinc-400 underline" href="/blog">Zurueck zum Blog</a>
    <h1 class="mt-4 text-3xl font-semibold">{post.data.title}</h1>
    <div class="mt-2 text-sm text-zinc-400">{post.data.date.toLocaleDateString("de-CH")}</div>

    <article class="prose prose-invert mt-10 max-w-none">
      <Content />
    </article>
  </section>
</BaseLayout>
