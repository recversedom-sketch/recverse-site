---
import BaseLayout from "../layouts/BaseLayout.astro";

const groups = [
  {
    title: "Web / Website",
    subtitle: "Schnell, wartbar, SEO-sauber. Code-first statt Plugin-Chaos.",
    items: [
      { name: "Landing + Struktur + SEO-Basis", price: "CHF 600-1'800", duration: "3-7 Tage", desc: "1-3 Seiten, klare CTA, Tech/SEO-Fundament, Performance-Basics." },
      { name: "Business-Site (5-10 Seiten)", price: "CHF 1'800-4'500", duration: "1-3 Wochen", desc: "IA, Copy-Struktur, Komponenten, Pages, Deploy, Uebergabe." },
      { name: "Blog-Setup (Markdown) + Templates", price: "CHF 300-900", duration: "1-2 Tage", desc: "Content Collections, Listing, Post-Template, Tags optional." },
      { name: "Performance/UX-Refactor", price: "CHF 600-2'000", duration: "2-6 Tage", desc: "Core Web Vitals, Accessibility Basics, UX-Feinschliff." },
    ],
  },
  {
    title: "KI / MVP",
    subtitle: "Pragmatisch: Risiken zuerst, dann MVP. Keine KI-Spielwiese ohne Nutzen.",
    items: [
      { name: "KI-PoC + Entscheidungsdokument", price: "CHF 900-2'800", duration: "3-10 Tage", desc: "Datenfluesse, Risiken, Architektur, Aufwand/Nutzen, naechste Schritte." },
      { name: "MVP-Umsetzung (klein)", price: "CHF 3'000-12'000", duration: "2-8 Wochen", desc: "UI + API + Deploy, minimaler Scope, klare Abnahme." },
      { name: "LLM-Governance Light", price: "CHF 700-2'500", duration: "2-7 Tage", desc: "Prompt-Standards, Logging-Policy, einfache Evaluations." },
    ],
  },
  {
    title: "Unternehmens- & Prozessberatung / IT-PM",
    subtitle: "Klarer Scope, wenig Overhead. Fokus auf Umsetzung und Stakeholder-Alignment.",
    items: [
      { name: "Prozessanalyse Ist/Soll + KPI-Set", price: "CHF 1'500-6'000", duration: "1-4 Wochen", desc: "Ist-Aufnahme, Sollbild, Pain Points, KPI/SLAs, Umsetzungsplan." },
      { name: "Projekt-Setup + PM-Begleitung (Retainer)", price: "CHF 1'000-4'000/Monat", duration: "laufend", desc: "Backlog, Risiko, Cutover, Go-Live, Steering, Reporting." },
    ],
  },
  {
    title: "Compliance / Datenschutz (CH/EU)",
    subtitle: "Technik- und Umsetzungs-Check. Textstruktur & Datenfluesse sauber machen.",
    items: [
      { name: "Website Datenschutz-Check", price: "CHF 300-1'200", duration: "0.5-2 Tage", desc: "Formulare, Cookies, Drittanbieter, minimaler Consent-Setup." },
    ],
  },
];
---

<BaseLayout title="Leistungen - RecVerse" description="Baukasten: Web, KI, Beratung, IT-PM. Klarer Scope, wartbarer Code, saubere Umsetzung.">
  <section class="mx-auto max-w-6xl px-4 py-16">
    <h1 class="text-3xl md:text-4xl font-semibold">Leistungen als Baukasten</h1>
    <p class="mt-4 text-zinc-300 max-w-3xl">
      Du waehnst Module, ich liefere einen klaren Scope und ein Angebot mit Fixpreis oder Bandbreite.
      Ziel: schnelle Ergebnisse ohne technische Schulden.
    </p>

    <div class="mt-10 grid gap-6">
      {groups.map((g) => (
        <div class="rounded-3xl border border-zinc-800/60 bg-zinc-900/20 p-8">
          <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-3">
            <div>
              <h2 class="text-2xl font-semibold">{g.title}</h2>
              <p class="mt-2 text-sm text-zinc-400">{g.subtitle}</p>
            </div>

            <a
              href={"/contact?topic=" + encodeURIComponent(g.title)}
              class="inline-flex w-fit items-center justify-center rounded-xl bg-zinc-100 px-4 py-2 text-sm font-semibold text-zinc-900 hover:bg-zinc-200 transition"
            >
              Angebot anfragen
            </a>
          </div>

          <div class="mt-6 grid gap-4 md:grid-cols-2">
            {g.items.map((it) => (
              <div class="rounded-2xl border border-zinc-800/60 bg-zinc-950/40 p-6">
                <div class="flex items-start justify-between gap-4">
                  <div class="font-semibold">{it.name}</div>
                  <div class="text-sm text-zinc-300 whitespace-nowrap">{it.price}</div>
                </div>

                <div class="mt-1 text-xs text-zinc-500">{it.duration}</div>
                <p class="mt-3 text-sm text-zinc-400">{it.desc}</p>

                <div class="mt-5">
                  <a
                    class="text-sm underline text-zinc-200 hover:text-zinc-100"
                    href={"/contact?module=" + encodeURIComponent(it.name)}
                  >
                    Dieses Modul anfragen
                  </a>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="mt-10 text-xs text-zinc-500">
      Preise sind Richtwerte (ab/bis) und haengen von Scope, Content-Verfuegbarkeit und Drittanbieter-Tools ab.
      Bei B2C gelten je nach Land zusaetzliche Konsumentenschutzpflichten.
    </div>
  </section>
</BaseLayout>
